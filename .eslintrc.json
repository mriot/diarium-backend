{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standardx"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "semi": [2, "always"],
        "quotes": [2, "double", "avoid-escape"],
        "space-before-function-paren": [2, { "named": "never" }]
      }
}
